{
  "name": "saas-stripe/payment-core",
  "description": "Sistema base de pagamentos SaaS com Stripe",
  "type": "project",
  "require": {
    "php": "^8.2",
    "mikecao/flight": "^1.3",
    "stripe/stripe-php": "^10.0",
    "monolog/monolog": "^3.0",
    "predis/predis": "^2.0",
    "vlucas/phpdotenv": "^5.5",
    "ifsnop/mysqldump-php": "^2.12"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "robmorgan/phinx": "^0.16.10"
  },
  "autoload": {
    "psr-4": {
      "App\\": "App/"
    }
  },
    "scripts": {
        "test": "phpunit",
        "migrate": "phinx migrate",
        "migrate:rollback": "phinx rollback",
        "migrate:status": "phinx status",
        "seed": "phinx seed:run",
        "seed:users": "phinx seed:run -s UserSeed",
        "backup": "php scripts/backup.php create",
        "backup:list": "php scripts/backup.php list",
        "backup:stats": "php scripts/backup.php stats",
        "backup:clean": "php scripts/backup.php clean"
    }
}
